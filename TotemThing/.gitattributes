###############################################################################
# .gitattributes for Unity (Collaboration-Friendly Version)
# 
# This file merges the best parts of both templates and adds detailed comments.
#
# GOALS:
#   - Keep Unity YAML assets readable in diffs (recommended for teamwork)
#   - Use UnityYAMLMerge for scenes/prefabs/etc.
#   - Track true binary assets with Git LFS
#   - Keep source files text-based with proper EOL normalization
###############################################################################


###############################################################################
# GENERAL GIT SETTINGS
###############################################################################

# Automatically normalize line endings to LF for all text files
* text=auto

# Improve diffs for C# scripts
*.cs text diff=csharp


###############################################################################
# ATTRIBUTE MACROS
# These let us assign named behaviors to groups of file types.
###############################################################################

# Macro: Files stored via Git LFS
[attr]lfs filter=lfs diff=lfs merge=lfs -text

# Macro: Unity JSON-style project files (ASMDEF, JSON assets)
[attr]unity-json eol=lf linguist-language=json

# Macro: Unity YAML files (scenes, prefabs, animations)
# - NOT marked as linguist-generated (we *want* readable diffs)
# - Uses UnityYAMLMerge for better auto merging
[attr]unity-yaml merge=unityyamlmerge eol=lf linguist-language=yaml


###############################################################################
# UNITY SOURCE CODE / SHADER FILES (All text)
###############################################################################

*.cginc                 text
*.compute               text linguist-language=hlsl
*.hlsl                  text linguist-language=hlsl
*.raytrace              text linguist-language=hlsl
*.shader                text


###############################################################################
# UNITY JSON FILES (ASMDEF, input assets, shader graphs)
###############################################################################

*.asmdef                unity-json
*.asmref                unity-json
*.index                 unity-json
*.inputactions          unity-json
*.shadergraph           unity-json
*.shadersubgraph        unity-json


###############################################################################
# UNITY UI TOOLKIT (USS / UXML / USS)
###############################################################################

*.tss                   text diff=css linguist-language=css
*.uss                   text diff=css linguist-language=css
*.uxml                  text linguist-language=xml


###############################################################################
# UNITY YAML ASSETS (Diff-friendly, NOT LFS)
# Scenes, prefabs, materials, animations, etc.
###############################################################################

*.anim                  unity-yaml
*.asset                 unity-yaml
*.brush                 unity-yaml
*.controller            unity-yaml
*.flare                 unity-yaml
*.fontsettings          unity-yaml
*.giparams              unity-yaml
*.guiskin               unity-yaml
*.lighting              unity-yaml
*.mask                  unity-yaml
*.mat                   unity-yaml
*.meta                  unity-yaml
*.mixer                 unity-yaml
*.overrideController    unity-yaml
*.playable              unity-yaml
*.prefab                unity-yaml
*.preset                unity-yaml
*.renderTexture         unity-yaml
*.scenetemplate         unity-yaml
*.shadervariants        unity-yaml
*.signal                unity-yaml
*.spriteatlas           unity-yaml
*.spriteatlasv2         unity-yaml
*.terrainlayer          unity-yaml
*.unity                 unity-yaml

# PhysicMaterial (3D) and PhysicsMaterial2D (2D)
*.physicMaterial        unity-yaml
*.physicsMaterial2D     unity-yaml


###############################################################################
# IGNORE FROM LANGUAGE STATS (Optional)
###############################################################################
# This prevents noise from 3rd party plugins and lock files.
Assets/Plugins/**               linguist-generated
Packages/packages-lock.json     linguist-generated


